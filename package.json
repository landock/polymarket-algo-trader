{
  "name": "@polymarket-algo-trader/chrome-extension",
  "version": "1.0.0",
  "private": true,
  "description": "Polymarket algorithmic trading Chrome extension",
  "scripts": {
    "dev": "cd chrome-extension && bun run dev",
    "build": "cd chrome-extension && bun run build",
    "type-check": "cd chrome-extension && bun run type-check",
    "install:extension": "cd chrome-extension && bun install",
    "clean": "trash chrome-extension/build chrome-extension/node_modules node_modules",
    "clean:e2e": "trash chrome-extension/test-results chrome-extension/playwright-report"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
